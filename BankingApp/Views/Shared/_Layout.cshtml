<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankingApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" /> 
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">               
                <a asp-area="" asp-controller="Accounts" asp-action="Get" class="navbar-brand">BankingApp</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Accounts" asp-action="Get">Accounts</a></li>
                    <li><a asp-area="" asp-controller="Payments" asp-action="Get">Payments</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />        
    </div>    
    @RenderSection("Scripts", required: false)
</body>
</html>
